# @description : execute batch commands through your favorite $EDITOR
######################################################################


[ $1 = "" ] && 1="mv -i"
[ $1 = "sox" ] && flags="-C 320"
\ls | $EDITOR - -c ":%s/.*/$1 \"&\" $flags \"&\"/g"
