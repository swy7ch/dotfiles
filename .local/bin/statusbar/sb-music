mpc="$(mpc --format "%albumartist% - %title%")"
format() { tac | sed "s/^volume: n\/a.*/ ðŸŽµ ---/g;/^volume:/d;s/\\&/&amp;/g;s/\\[paused\\].*/ â¸/g;s/\\[playing\\].*/ ðŸŽµ/g" | paste -sd ' ' -;}

pgrep -f sb-mpdup >/dev/null 2>&1 || sb-mpdup >/dev/null 2>&1 &

echo "$mpc" | format
